ll modularExpo(ll a, ll n)
{
	ll res = 1;
	while (n > 0)
	{
		if (n % 2 == 0)
			a = (a * a) % MOD, n /= 2;
		else
			res = (res * a) % MOD , n--;
	}
	return res;
}
]]></content>
